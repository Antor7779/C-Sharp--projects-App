       public string conString = "Data Source=DEADSOUL\\SQLEXPRESS;Initial Catalog=People_info;Integrated Security=True";

        private void btnLogin_Click(object sender, EventArgs e)
        {
            
           SqlConnection con=new SqlConnection(conString);
            con.Open();

            if(con.State==System.Data.ConnectionState.Open)
            {
                string q = "insert into Log_in(id,Name,Password)values( '"+txtId.Text.ToString()+"',  '"+ txtName.Text.ToString() + "','" + txtPass.Text.ToString() + "')";
            SqlCommand cmd=new SqlCommand(q,con);
             
                MessageBox.Show("Connection was made successfulyy..");
